{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es2018",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "lib": ["esnext"]
  },
  "include": ["src/**/*", "test/extractPlayers.spec.ts"],
  "exclude": ["node_modules", "rollup.config.js", "src/index.ts"]
}
